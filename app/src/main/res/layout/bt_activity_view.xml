<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/connect_to_last_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="175dp"
        android:background="@drawable/roundedbutton"
        android:padding="10dp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/add_device_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_device_button"
        android:layout_width="75dp"
        android:layout_height="74dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/roundbutton"
        android:text="@string/ChangeSavedDevice"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connect_to_last_button" />


</android.support.constraint.ConstraintLayout>