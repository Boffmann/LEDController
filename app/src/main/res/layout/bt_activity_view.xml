<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_device_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/SearchDevice"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Paired devices"/>

        <ListView
            android:id="@+id/lvPairedDevices"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Discovered unpaired devices"/>

        <ListView
            android:id="@+id/lvUnpairedDevices"
            android:layout_width="360dp"
            android:layout_height="150dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Discovered near devices"/>

        <ListView
            android:id="@+id/lvNearDevices"
            android:layout_width="360dp"
            android:layout_height="150dp" />

    </LinearLayout>

</LinearLayout>